@model IEnumerable<ClassHelpers.Models.Database.Database>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
     @if (User.Identity.IsAuthenticated){
    <a asp-action="Create">
        <button type="button" class="btn btn-primary">Create a hint</button> 
    </a>

     }else{
      //<a asp-action="Chatroom">To be able to edit, please log in first</a>  
      <a href="/Identity/Account/Login">To be able to edit, please log in first</a> 
     }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hint)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hint)
            </td>
            <td>
                @if (User.Identity.IsAuthenticated)
                {
                  <td>
                <a asp-action="Edit" asp-route-id="@item.Id"> 
                    <button type="button" class="btn btn-warning">Edit</button> 
                </a>
                <a asp-action="Details" asp-route-id="@item.Id">
                    <button type="button" class="btn btn-warning">Details</button> 
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id">
                    <button type="button" class="btn btn-warning">Delete</button> 
                </a>
                        </td>
                    }
                    else
                    {
                        <td>
                            <div class="alert alert-danger" role="alert">
                                You cannot edit or delete these products, because you are not loged in!
                            </div>
                        </td>
                    }

            </td>
        </tr>
}
    </tbody>
</table>
